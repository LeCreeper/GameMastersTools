        <!--  Popup stackpanel  -->
        <StackPanel
            Name="PopupAddNewStackPanel"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="600"
            Height="400"
            Padding="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="#cfcfcf"
            BorderThickness="2,2,2,2"
            Visibility="Collapsed">
            <StackPanel.Background>
                <SolidColorBrush Opacity="0.9" Color="White" />
            </StackPanel.Background>
            <RelativePanel>
                <TextBox
                    Name="PopUpNameTextBox"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    Foreground="#323232"
                    PlaceholderText="Name Name"
                    Text="{Binding PcName, Mode=TwoWay}" />
                <TextBox
                    Name="PopUpDescriptionTextBox"
                    Width="400"
                    Height="200"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    Foreground="#323232"
                    PlaceholderText="Description"
                    RelativePanel.Below="PopUpNameTextBox"
                    Text="{Binding PcDescription, Mode=TwoWay}"
                    TextWrapping="Wrap" />
                <Button
                    Name="PopupButton"
                    Margin="0,5,0,0"
                    Background="Crimson"
                    Command="{Binding CreatePcCommand}"
                    Content="Add"
                    Foreground="White"
                    RelativePanel.Below="PopUpDescriptionTextBox" />
                <Button
                    Click="Button_Click_1"
                    Content="X"
                    RelativePanel.AlignRightWithPanel="True" />
            </RelativePanel>
        </StackPanel>

