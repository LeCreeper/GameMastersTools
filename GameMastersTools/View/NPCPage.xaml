<Page
    x:Class="GameMastersTools.View.NPCPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameMastersTools.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:GameMastersTools.ViewModel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ResourceDictionary Source="Dictionary.xaml" />
    </Page.Resources>

    <Page.DataContext>
        <viewModel:NPCViewModel/>
    </Page.DataContext>
    
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height ="180"/>
            <RowDefinition Height ="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height ="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- ListView With NPCs -->
        <ListView Grid.Row="2" Grid.Column="1" 
            Width="Auto"
            HorizontalAlignment="Center"
            MinWidth="170"
            ItemsSource="{Binding NPCs, Mode=TwoWay, 
            UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding selectedNPC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
             >

            <ListView.ItemTemplate>
            <DataTemplate>
            <TextBlock 
             Name="Name" 
             Text="{Binding NPCName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
             Padding="5,5,5,5"
             />
                    
                   
            </DataTemplate>
        </ListView.ItemTemplate>

        </ListView>

        <!-- Buttons for adding and deleting -->
        <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
            
            <!-- AddButton -->
            <StackPanel Orientation="Horizontal" Style="{StaticResource StandardStackPanelStyle}" Margin="5">
                <TextBlock Text="Add NPC" VerticalAlignment="Center" Margin="10"/> 
                <Button Command="{Binding TemplateCommand}"  Click="Button_Click_2" Style="{StaticResource AddButton}"/>
            </StackPanel>

            

            <!-- RemoveButton -->
            <StackPanel Orientation="Horizontal" Style="{StaticResource StandardStackPanelStyle}" Margin="5">
                <TextBlock Text="Remove NPC" VerticalAlignment="Center" Margin="10"/>
                <Button  Style="{StaticResource DeleteButton}" Click="ShowDeletePopupOffsetClicked"/>
            </StackPanel>

        </StackPanel>

        <!-- Create NPC Popup -->
        <StackPanel 
            Name="PopupAddNewStackPanel"
            Grid.Row="2"
            Grid.Column="1"
            
            Width="600"
            Height="400"
            Padding="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="#cfcfcf"
            BorderThickness="2,2,2,2"
            Visibility="Collapsed">
            <StackPanel.Background>
                <SolidColorBrush Opacity="0.9" Color="White" />
            </StackPanel.Background>
            <RelativePanel>
                <TextBox
                    Name="PopUpNameTextBox"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    Foreground="#323232"
                    PlaceholderText="Name"
                    Text="{Binding Name, Mode=TwoWay}" />
                <TextBox
                    Name="PopUpDescriptionTextBox"
                    Width="400"
                    Height="200"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    AcceptsReturn="True"
                    FontSize="17"
                    Foreground="#323232"
                    PlaceholderText="Description"
                    RelativePanel.Below="PopUpNameTextBox"
                    Text="{Binding Description, Mode=TwoWay}"
                    TextWrapping="Wrap" />
                <Button
                    Name="PopupButton"
                    Margin="0,5,0,0"
                    Background="#FFE65757"
                    Command="{Binding AddCommand}"
                    Content="Add"
                    Foreground="White"
                    RelativePanel.Below="PopUpDescriptionTextBox" />
                <Button
                    Background="#FFE65757"
                    Click="Button_Click_1"
                    RelativePanel.AlignRightWithPanel="True">
                    <TextBlock
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="&#xE711;" />
                </Button>
            </RelativePanel>
        </StackPanel>

        <!-- Popup for deleting -->
        <Popup
            x:Name="DeletePopUp"
            Grid.Row="2"
            Grid.Column="1"
            Width="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel
                Style="{StaticResource StandardStackPanelStyle}"
                Padding="10">
                <TextBlock Margin="5" Text="Are you sure you want to delete this NPC?" />
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Margin="5"
                        Click="CloseDeletePopupClicked"
                        Content="No"
                        Style="{StaticResource StandardButton}"/>
                    <Button
                        Margin="5"
                        Click="CloseDeletePopupClicked"
                        Command="{Binding RemoveCommand}"
                        Content="Yes"
                        Style="{StaticResource RedButton}"/>
                </StackPanel>
            </StackPanel>
        </Popup>

        <!-- Navigation to NPCDetails page -->
       <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
           <StackPanel Orientation="Horizontal" Style="{StaticResource StandardStackPanelStyle}" Margin="5">
               <TextBlock Text="Navigate To NPC" VerticalAlignment="Center" Margin="10"/>
                <Button Height="40" FontFamily="Segoe MDL2 Assets" Content="&#xF0D2;"/>
           </StackPanel>
        </StackPanel>

    </Grid>
</Page>
