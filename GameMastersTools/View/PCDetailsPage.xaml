<Page
    x:Class="GameMastersTools.View.PCDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GameMastersTools.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:GameMastersTools.ViewModel"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewModel:PcViewModel />
    </Page.DataContext>

    <Grid>
        <StackPanel>
            <TextBlock FontSize="20" Text="{Binding SelectedPc.PcName}" />
            <TextBlock FontSize="20" Text="{Binding SelectedPc.PcDescription}" />
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="200"
                    Height="30"
                    Click="ButtonBase_OnClick"
                    Content="Go back" />
                <Button
                    Width="200"
                    Height="30"
                    Click="Button_Click"
                    Content="Edit player" />
                <Button
                    Width="200"
                    Height="30"
                    Content="Add to campaign" />
            </StackPanel>
        </StackPanel>

        <StackPanel
            Name="PopupEditStackPanel"
            Grid.Column="0"
            Width="500"
            Height="300"
            Padding="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="#cfcfcf"
            BorderThickness="2,2,2,2"
            Visibility="Collapsed">
            <StackPanel.Background>
                <SolidColorBrush Opacity="0.9" Color="White" />
            </StackPanel.Background>
            <RelativePanel>
                <TextBox
                    Name="PopUpNameTextBox"
                    MinWidth="200"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    Foreground="#323232"
                    PlaceholderText="Name Name"
                    Text="{Binding SelectedPc.PcName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    Name="PopUpDescriptionTextBox"
                    Width="400"
                    Height="200"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    Foreground="#323232"
                    PlaceholderText="Description"
                    RelativePanel.Below="PopUpNameTextBox"
                    Text="{Binding SelectedPc.PcDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap" />
                <Button
                    Name="PopupButton"
                    Margin="0,5,0,0"
                    Background="Crimson"
                    Command="{Binding UpdatePcCommand}"
                    Content="Add"
                    Foreground="White"
                    RelativePanel.Below="PopUpDescriptionTextBox" />
                <Button
                    Click="Button_Click_1"
                    Content="X"
                    RelativePanel.AlignRightWithPanel="True" />
            </RelativePanel>
        </StackPanel>
    </Grid>
</Page>
